@model IEnumerable<DrMarko.Models.ProductImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-route-pid='@ViewContext.RouteData.Values["pid"]' asp-action="Create">Create New</a> |
    <a asp-route-id='@ViewContext.RouteData.Values["pid"]' asp-controller="Products" asp-action="Index">Goto Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Alt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Alt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Id)
            </td>
            <td>
                <a asp-route-pid='@ViewContext.RouteData.Values["pid"]' asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-route-pid='@ViewContext.RouteData.Values["pid"]' asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-route-pid='@ViewContext.RouteData.Values["pid"]' asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
