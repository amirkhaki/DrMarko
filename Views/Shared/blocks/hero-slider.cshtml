@model IEnumerable<Slider>
<div class="hero-slider">
  @foreach(var slider in Model)
  {
  <div class="slider-item th-fullpage hero-area" style='background-image: url(@Url.Action("Index", "Images", new {id = slider.ImageId}));'>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 text-@slider.Alignment.ToString().ToLower()">
          <p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">@slider.SubTitle</p>
          <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">@slider.Title</h1>
          <a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="@slider.Url">@slider.ButtonText</a>
        </div>
      </div>
    </div>
  </div>
  }
</div>
